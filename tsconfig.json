{
  "compilerOptions": {
    /* Базовые настройки */
    "target": "ES2022",                    // ⬅️ современный таргет под Node 18/20
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",         // ⬅️ важно для Next 13+ и subpath-импортов
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,

    /* Совместимость */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,

    /* Проверки */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    /* Плагины */
    "plugins": [{ "name": "next" }],

    /* Алиасы */
    "baseUrl": ".",                        // ⬅️ нужен, чтобы заработали paths
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tailwind.config.js",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
