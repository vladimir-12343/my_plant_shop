{
  "compilerOptions": {
    /* Базовые настройки */
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,

    /* Совместимость */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,

    /* Проверки */
    "strict": true,                        // включает все строгие проверки
    "skipLibCheck": false,                 // проверять типы в node_modules
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,      // индексирование даёт |undefined
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    /* Плагины */
    "plugins": [
      { "name": "next" }
    ],

    /* Алиасы */
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tailwind.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
